<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectPDMXamarin.Pages.ListaMese">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="{Binding Data, StringFormat='Mese: {0}'}" FontSize="Title" Padding="30,10,30,10"/>
            <ListView x:Name="listViewMese">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding TipMasa}"/>
                                <Label Text="{Binding Nume}"/>
                                <Label Text="{Binding Calorii,StringFormat='= {0} calorii'}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>



            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>